<?php $__env->startSection('content'); ?>
<div class="container">
	<div class="row">
		<?php echo $__env->make('menu', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
		<div class="col-md-10 col-md-offset-1">
			<div class="panel panel-default">
				<div class="panel-heading">房间列表
					&nbsp;&nbsp;<a class="glyphicon glyphicon-plus" href="<?php echo e(url('/admin/shop/goods/create')); ?>">添加</a>
				</div>
				<div class="panel-body">
					<div class="table-responsive">
						<table class="table">
							<tr>
								<th class="info">ID</th>
								<th class="info">房间名称（编号）</th>
								<th class="info">所属类型</th>
								<th class="info">开关房</th>
								<th class="info">入住状态</th>
								<th class="info">操作</th>
							</tr>
							<?php foreach($goods as $item): ?>
							<tr>
							<td><?php echo e($item->goods_id); ?></td>
							<td><?php echo e($item->name); ?></td>
							<td><?php echo e($item->category['name']); ?></td>
							<td>
								<?php if($item->open==1): ?>
									<button type="button" class="btn btn-default btn-sm" onclick="app.goods.audit('open','<?php echo e($item->goods_id); ?>',0)" title="点击关房">开房</button>
								<?php else: ?>
									<button type="button" class="btn btn-default btn-sm" onclick="app.goods.audit('open','<?php echo e($item->goods_id); ?>',1)" title="点击开房">关房</button>
								<?php endif; ?>
							</td>
							<td>
								<?php if($item->open==1): ?>
									<select class="form-control" name="status_change" id="<?php echo e($item->goods_id); ?>">
										<option value="1" <?php if($item->status==1): ?> selected <?php endif; ?>>无人入住</option>
										<option value="0" <?php if($item->status==0): ?> selected <?php endif; ?>>有人入住</option>
										<option value="-1"  <?php if($item->status==-1): ?> selected <?php endif; ?>>维护中</option>
									</select>
								<?php else: ?>
									关房不可入住
								<?php endif; ?>
							</td>
							<td>
								<a href="<?php echo e(url('/admin/shop/goods/show/'.$item->goods_id)); ?>"><button type="button" class="btn btn-default btn-sm">修改</button></a>
								<button type="button" class="btn btn-default btn-sm" onclick="app.goods.del('<?php echo e($item->goods_id); ?>')">删除</button>
								<?php if(!$item->qrcode): ?>
								<a href="/admin/shop/goods/qrcode/<?php echo e($item->goods_id); ?>". ><button type="button" class="btn btn-default btn-sm">生成二维码</button></a>
								<?php else: ?>
								<a href="/admin/shop/goods/show_qrcode/<?php echo e($item->goods_id); ?>". ><button type="button" class="btn btn-default btn-sm">查看二维码</button></a>
								<?php endif; ?>
								<?php if($item->open==1): ?>
									<?php if($item->status == 1): ?> <a href="<?php echo e(url('/admin/order/loadarrange/'.$item->goods_id)); ?>"><button type="button" class="btn btn-default btn-sm">安排入住</button></a>
									<?php elseif($item->status == 0): ?> <button type="button" class="btn btn-default btn-sm" disabled>客房已满</button>
									<?php else: ?> <button type="button" class="btn btn-default btn-sm" disabled>不能安排</button>
									<?php endif; ?>
								<?php else: ?>
								<button type="button" class="btn btn-default btn-sm" disabled>不能入住</button>
								<?php endif; ?>
							</td>
							</tr>
							<?php endforeach; ?>
						</table>
					</div>
				</div>
				<div class="panel-footer">
					<?php echo $goods->render(); ?>

				</div>
			</div>
		</div>
	</div>

	<script>
		$('select[name=status_change]').each(function(){
			$(this).change(function(){
				var id = $(this).attr('id');
				var status = $(this).val();
				$.post('/admin/shop/goods/item',{id:id,field:'status',val:status},function(result){
					if(result.code==1){
						setTimeout(function(){
							window.location.reload();
						},500);
					}else{
						alert(result.msg);
					}
				},'json').error(function(jqXHR,textStatus, errorThrown){
					alert(errorThrown);
				});
			});
		});
	</script>

<?php $__env->stopSection(); ?>

<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>